{
  "id": "dMRI_b0_AP_Run1",
  "template": "fieldmap_file",
  "where": {
    "container_type": "file",
    "parent_container_type": "acquisition",
    "file.type": {
      "$in": [
        "nifti",
        "NIfTI",
        "JSON"
      ]
    },
    "acquisition.label": {
      "$regex": "dMRI_b0_AP_SBRef"
    }
  },
  "initialize": {
    "Dir": "AP",
    "Acq": "b0",
    "Run": "1",
    "Suffix": "sbref"
  },
  "custom_name": {
    "$join": [
      "fmap/sub-{file.info.BIDS.Subject|pattern=(?P<value>^[^_]+)}",
      "ses-{file.info.BIDS.Session}",
      "dir-{Dir}",
      "run-{Run}",
      "acq-{Acq}",
      "{Suffix}"
    ]
  }
}