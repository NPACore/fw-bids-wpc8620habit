{
  "id": "dMRI_dir98_PA_Run1_DWI",
  "template": "diffusion_file",
  "where": {
    "container_type": "file",
    "parent_container_type": "acquisition",
    "file.type": {
      "$in": [
        "nifti",
        "NIfTI",
        "JSON"
      ]
    },
    "acquisition.label": {
      "$regex": "dMRI_dir98-1_PA"
    }
  },
  "initialize": {
    "Dir": "PA",
    "Acq": "98",
    "Run": "1",
    "Suffix": "dwi"
  },
  "custom_name": {
    "$join": [
      "dwi/sub-{file.info.BIDS.Subject|pattern=(?P<value>^[^_]+)}",
      "ses-{file.info.BIDS.Session}",
      "dir-{Dir}",
      "run-{Run}",
      "acq-{Acq}",
      "{Suffix}"
    ]
  }
}