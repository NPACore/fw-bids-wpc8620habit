{
  "id": "RestingState_ME_Run1",
  "template": "func_file",
  "where": {
    "container_type": "file",
    "parent_container_type": "acquisition",
    "file.type": {
      "$in": [
        "nifti",
        "NIfTI",
        "JSON"
      ]
    },
    "acquisition.label": {
      // also match SBRef or _repeat
      "$regex": "Resting-state_ME.*"
    }
  },
  "initialize": {
    "Task": "RestingState",
    // instead of run 1 and run 2
    // indicate if rest was before or after the tasks
    "Acq": {
      "$switch": {
        "$on": "acquisition.label",
        "$cases": [
          {
            "$regex": "(?i).*_repeat.*",
            "$value": "end"
          },
          {
            "$default": true,
            "$value": "start"
          }
        ]
      }
    },
    "Echo": {
      "file.name": {
        "$regex": "_e(?P<value>[0-9]+)",
        "$default": null
      }
    },
    "Suffix": {
      "$switch": {
        "$on": "acquisition.label",
        "$cases": [
          {
            "$regex": ".*_SBRef$",
            "$value": "sbref"
          },
          {
            "$default": true,
            "$value": "bold"
          }
        ]
      }
    }
  }
}
